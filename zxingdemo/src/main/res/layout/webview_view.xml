<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
     >
    <ProgressBar
        android:id="@+id/pb"
        android:layout_alignParentTop="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:indeterminateOnly="false"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar_states" >
    </ProgressBar>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView"
        />
    <com.google.android.gms.ads.AdView
        android:id="@+id/main_adView"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bottom"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_unit"/>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/webviewbottomhight"
        android:weightSum="3"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">
        <LinearLayout
            android:id="@+id/linear_left"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:onClick="onLinearClickback"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/left"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonClickback"
                android:background="@drawable/defaultleft"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:onClick="onLinearClickForward"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:onClick="onButtonClickForward"
                android:background="@drawable/defaultright"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_close"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:onClick="onLinearClose"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/close_btn"
                android:background="@drawable/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:onClick="onButtonClickClose"

                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>